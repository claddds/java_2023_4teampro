<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="movie">
	<!--	이걸로 합치기  -->
	<!-- 영화목록 불러오기 -->
	<select id="movieList" resultType="project.LJH.DB.VO">

		select movie_name from movie

	</select>

	<!-- 상영시간표 불러오기1 -->
	<select id="stimeList" resultType="project.LJH.DB.VO">
		select start_time from
		movie_schedule
	</select>
	<select id="etimeList" resultType="project.LJH.DB.VO">
		select end_time from
		movie_schedule
	</select>



	<select id="getMovieTimes" parameterType="java.lang.String"
		resultType="project.LJH.DB.VO">
		SELECT start_time, end_time
		FROM movie_schedule
		WHERE movie_name = #{movieTitle}
	</select>


	<!-- 포인트불러오기 -->

	<select id="point" parameterType="project.LJH.DB.VO"
		resultType="project.LJH.DB.VO">
		SELECT P.REMAINING_POINT
		FROM LOGIN_INFO L
		JOIN POINT P ON
		L.CUST_ID =
		P.CUST_ID
		WHERE L.CUST_ID = #{cust_id}
	</select>

	
	
	

</mapper>